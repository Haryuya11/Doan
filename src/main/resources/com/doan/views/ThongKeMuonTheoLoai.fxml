<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doan.controllers.ThongKeMuonTheoLoaiController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Thống Kê Mượn Theo Loại" style="-fx-font-size: 24;"/>

    <HBox spacing="10">
        <Button fx:id="btnThongKe" text="Thống kê" />
    </HBox>
    <TableView fx:id="tableViewKetQua">
        <columns>
            <TableColumn text="Mã Loại" fx:id="colMaLoai" />
            <TableColumn text="Thể Loại" fx:id="colTenLoai" />
            <TableColumn text="Số Lượng Mượn" fx:id="colSoLuongMuon"/>
        </columns>
    </TableView>
</VBox>
